@model BC.Web.Models.ListAllPlacesViewModel

<div class="row">
    <div class="container all-places-container">
        <div class="col-md-8">
            <h1>@Model.Header</h1>

            @if (Model.Countries != null && Model.Countries.Count > 0)
            {
                <div class="row">
                    <div class="col-md-12">
                        <h2>@Resources.Resources.Countries</h2>
                        <ul>
                            @foreach (var c in Model.Countries)
                            {
                                <li>
                                    <a href="@c.Url">@c.DisplayName</a>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
            }

            @if (Model.Areas != null && Model.Areas.Count > 0)
            {
                <div class="row">
                    <div class="col-md-12">
                        <h2>@Resources.Resources.Areas</h2>
                        <ul>
                            @foreach (var c in Model.Areas)
                            {
                                <li>
                                    <a href="@c.Url">@c.DisplayName</a>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
            }

            @if (Model.Cities != null && Model.Cities.Count > 0)
            {
                <div class="row">
                    <div class="col-md-12">
                        <h2>@Resources.Resources.Cities</h2>
                        <ul>
                            @foreach (var c in Model.Cities)
                            {
                                <li>
                                    <a href="@c.Url">@c.DisplayName</a>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
            }

            @if (Model.Districts != null && Model.Districts.Count > 0)
            {
                <div class="row">
                    <div class="col-md-12">
                        <h2>@Resources.Resources.Districts</h2>
                        <ul>
                            @foreach (var c in Model.Districts)
                            {
                                <li>
                                    <a href="@c.Url">@c.DisplayName</a>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
            }

        </div>
        <div class="col-md-4">

        </div>
    </div>
</div>